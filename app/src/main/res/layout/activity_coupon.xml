<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    >
    <include
        android:id="@+id/tb"
        layout="@layout/toolbar"
        />

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:visibility="invisible"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/default_outer_padding"
            >
            <FrameLayout
                android:id="@+id/frame_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <ImageView
                    android:id="@+id/img_main"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:layout_gravity="center"
                    android:contentDescription="@string/coupon_image_description" />
                <!--FAB-->
                <ImageButton
                    android:id="@+id/btn_rotate_right"
                    android:layout_width="@dimen/floating_rotate_button_size"
                    android:layout_height="@dimen/floating_rotate_button_size"
                    android:layout_gravity="bottom|end"
                    android:layout_marginRight="@dimen/floating_rotate_button_size_margin"
                    android:layout_marginEnd="@dimen/floating_rotate_button_size_margin"
                    android:layout_marginBottom="@dimen/floating_rotate_button_size_margin"
                    android:background="@drawable/oval_ripple"
                    android:src="@drawable/ic_rotate_right_white_24dp"
                    android:elevation="@dimen/medium_elevation"
                    android:visibility="gone"
                    />
            </FrameLayout>

            <RelativeLayout
                android:id="@+id/relative_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/default_outer_padding"
                android:descendantFocusability="beforeDescendants"
                android:focusableInTouchMode="true"
                >
                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Title"
                    style="@style/Title"
                    />
                <TextView
                    android:id="@+id/tv_mark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mark as Used"
                    android:layout_alignParentRight="true"
                    style="@style/Title"
                    />
                <EditText
                    android:id="@+id/et_company"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_title"
                    android:hint="Company"
                    android:singleLine="true"
                    android:inputType="textCapSentences"
                    />
                <Switch
                    android:id="@+id/mark_as_used"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignBaseline="@id/et_company"
                    android:layout_below="@id/tv_mark"

                    />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expiration "
                android:paddingLeft="@dimen/default_outer_padding"
                android:paddingRight="@dimen/default_outer_padding"
                android:clickable="true"
                style="@style/Title"
                />
            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="00/00/0000"
                android:paddingLeft="@dimen/default_outer_padding"
                android:paddingRight="@dimen/default_outer_padding"
                style="@style/Subtitle"
                android:clickable="true"
                />
            </LinearLayout>


    </ScrollView>

</FrameLayout>
