<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:title="@string/app_name"
            android:elevation="@dimen/medium_elevation"
            android:background="@color/blue"
            >

        </android.support.v7.widget.Toolbar>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            android:scrollbars="none"
            android:padding="@dimen/default_outer_padding"
            android:clipToPadding="false"
            />
    </LinearLayout>

    <!--FAB-->
    <ImageButton
        android:id="@+id/btn_add"
        android:layout_width="@dimen/floating_action_button_size"
        android:layout_height="@dimen/floating_action_button_size"
        android:layout_gravity="bottom|end"
        android:layout_marginRight="@dimen/floating_action_button_margin_right"
        android:background="@drawable/oval_ripple"
        android:src="@drawable/ic_add_white"
        android:elevation="@dimen/high_elevation"
        android:layout_marginBottom="@dimen/floating_action_button_margin_right"
        />
</FrameLayout>
